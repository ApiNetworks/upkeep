<UserControl xmlns:my="http://metro.mahapps.com/winfx/xaml/controls"  x:Class="Upkeep.Modules.DatabaseExplorer.Views.QueryExplorerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Upkeep.Modules.DatabaseExplorer.Views"
             xmlns:c="clr-namespace:Upkeep.Modules.DatabaseExplorer.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TabControl Padding="2" Grid.Row="0" Grid.ColumnSpan="2">
            <TabControl.Resources>
                <Style TargetType="TabItem" />
            </TabControl.Resources>
            <TabItem>
                <TabItem.Header>
                    <Label Content="SQL EDITOR" HorizontalAlignment="Stretch"/>
                </TabItem.Header>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="170" />
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Grid.Column="0" Name="QueryTextBox" 
                HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                AcceptsReturn="True" 
                AcceptsTab="True"
                Margin="5" 
                TextWrapping="Wrap" 
                MinLines="1" 
                MaxLines="10" 
                VerticalScrollBarVisibility="Auto"
                Text="{Binding QueryString}">
                    </TextBox>
                    <Button Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Content="Run Query" Width="90" Height="25" Margin="5" Command="{Binding Path=ExecuteQueryCommand}" CommandParameter="RunQuery"/>
                    <Button Grid.Row="0" Grid.Column="1" Content="Save Snippet" Width="90" Height="25" Margin="5" Command="{Binding Path=ExecuteQueryCommand}" CommandParameter="SaveQuery"/>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Label Content="SQL SNIPPETS" HorizontalAlignment="Stretch"/>
                </TabItem.Header>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="170" />
                    </Grid.RowDefinitions>
                    <DataGrid Name="SqlSnippetGrid" AutoGenerateColumns="False" 
                            ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                            ItemsSource="{Binding Path=SqlSnippets}" 
                            SelectionMode="Single"
                            SelectionUnit="FullRow"
                            SelectedItem="{Binding SelectedSnippet}" 
                              IsReadOnly="True"
                            c:Commands.DataGridDoubleClickCommand="{Binding DataGridDoubleClick}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Description" Binding="{Binding Name}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <DataGrid AutoGenerateColumns="False" 
                  Grid.Row="1" Grid.ColumnSpan="2" Name="QueryTable" 
                  ItemsSource="{Binding Path=QueryDataTable}" 
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                            ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  c:DataGridColumnsBehavior.BindableColumns="{Binding ColumnCollection}" >
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="FontSize" Value="11"/>
                    <Setter Property="FontWeight" Value="Light"/>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</UserControl>
